<div class="container">
  <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
              <h3><%= @contact.full_name %></h3>
          </div>
          <div class="card-body">
              <p><strong>Phone Number:</strong> <%=number_to_phone(@contact.phone_number, :groupings => [3, 3, 4], :delimiter => "-")%> </p>
              <%= link_to "Edit",edit_contact_path(@contact), class: "btn btn-sm  btn-outline-dark" %>
              <%= link_to "Back to Contacts", contacts_path, class: "btn btn-sm btn-outline-info" %>
          </div>
        </div>
      </div>
  </div>
</div>

