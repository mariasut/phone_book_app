<div class="container">
  <div class="row  justify-content-md-center">
    <div class="col-md-10">
      <%= render 'layouts/errors', obj: contact %> 
      <%= form_with(model: contact, class:'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
        <div class="form-group row  mt-4">
            <%= f.label :first_name, 'First Name', class: "col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_field :first_name, class: "form-control shadow rounded" %>
            </div>
        </div>
        <div class="form-group row  mt-4">
            <%= f.label :last_name, 'Last Name', class: "col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_field :last_name, class: "form-control shadow rounded" %>
            </div>
        </div>
        <div class="form-group row  mt-4">
            <%= f.label :phone_number, 'Phone Number', class: "col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
                <%= f.text_field :phone_number, class: "form-control shadow rounded" %>
            </div>
        </div>
        <div class="form-group col-md-3 offset-5 row mt-3 justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-sm" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to contacts ]', root_path, class: "text-info" %>
    </div>
  </div>
</div>
